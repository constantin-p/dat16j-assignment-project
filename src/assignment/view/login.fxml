<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane
    hgap="15.0"
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    stylesheets="@main.css"
    xmlns="http://javafx.com/javafx/8.0.65"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="assignment.core.LoginController">
    <columnConstraints>
        <ColumnConstraints
            hgrow="SOMETIMES"
            maxWidth="15.0"
            minWidth="15.0"
            prefWidth="15.0" />
        <ColumnConstraints
            hgrow="SOMETIMES"
            minWidth="160.0"
            prefWidth="160.0" />
        <ColumnConstraints
            hgrow="SOMETIMES"
            maxWidth="15.0"
            minWidth="15.0"
            prefWidth="15.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints
            maxHeight="15.0"
            minHeight="15.0"
            prefHeight="15.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            minHeight="30.0"
            vgrow="ALWAYS" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="15.0"
            minHeight="15.0"
            prefHeight="15.0"
            vgrow="NEVER" />
    </rowConstraints>
    <children>
        <Label fx:id="loginErrorLabel"
            styleClass="error-label"
            text="INFO LABEL"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1" />
        <Label
            text="Username:"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets bottom="3.0" />
            </padding>
        </Label>
        <TextField fx:id="loginUsernameTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3" />
        <Label
            text="Password:"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets bottom="3.0" />
            </padding>
        </Label>
        <PasswordField fx:id="loginPasswordTextField"
            GridPane.columnIndex="1"
            GridPane.rowIndex="5" />
        <Button fx:id="submitButton"
            text="Login"
            onAction="#handleLoginAction"
            mnemonicParsing="false"
            GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"
            GridPane.rowIndex="7" />
        <Button
            text="Register"
            onAction="#handleShowRegisterAction"
            mnemonicParsing="false"
            maxWidth="1.7976931348623157E308"
            GridPane.columnIndex="1"
            GridPane.rowIndex="9" />
    </children>
</GridPane>
