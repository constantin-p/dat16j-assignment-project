<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane
    hgap="15.0"
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    prefHeight="400.0"
    prefWidth="330.0"
    xmlns="http://javafx.com/javafx/8.0.65"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="assignment.core.CrashController">
    <columnConstraints>
        <ColumnConstraints
            hgrow="SOMETIMES"
            maxWidth="15.0"
            minWidth="15.0"
            prefWidth="15.0" />
        <ColumnConstraints
            hgrow="SOMETIMES"
            minWidth="250.0"
            prefWidth="250.0" />
        <ColumnConstraints
            hgrow="SOMETIMES"
            maxWidth="15.0"
            minWidth="15.0"
            prefWidth="15.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints
            maxHeight="15.0"
            minHeight="15.0"
            prefHeight="15.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="30.0"
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            minHeight="10.0"
            prefHeight="43.0"
            vgrow="ALWAYS" />
        <RowConstraints
            maxHeight="1.7976931348623157E308"
            minHeight="15.0"
            prefHeight="15.0"
            vgrow="NEVER" />
        <RowConstraints
            minHeight="30.0"
            prefHeight="30.0"
            vgrow="NEVER" />
        <RowConstraints
            maxHeight="15.0"
            minHeight="15.0"
            prefHeight="15.0"
            vgrow="NEVER" />
    </rowConstraints>
    <children>
        <Label
            text="Tournament app quit unexpectedly."
            GridPane.columnIndex="1"
            GridPane.rowIndex="1">
            <font>
                <Font
                    name="System Bold"
                    size="14.0" />
            </font>
        </Label>
        <Label
            text="Stack trace:"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.valignment="BOTTOM">
            <padding>
                <Insets
                    bottom="3.0" />
            </padding>
        </Label>
        <TextArea fx:id="crashTextArea"
            editable="false"
            prefHeight="200.0"
            prefWidth="200.0"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3">
            <font>
                <Font
                    name="Courier New" />
            </font>
        </TextArea>
        <HBox
            alignment="CENTER_RIGHT"
            GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"
            GridPane.rowIndex="5">
            <children>
                <Button
                    text="OK"
                    onAction="#handleCancelAction"
                    mnemonicParsing="false" />
            </children>
            <padding>
                <Insets
                    bottom="8.0"
                    top="8.0" />
            </padding>
        </HBox>
    </children>
</GridPane>
